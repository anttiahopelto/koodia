<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harkkapackage.HarkkaGUIController">
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#handleLisaaJasen" text="_Lisää uusi jäsen">
               <tooltip>
                  <Tooltip text="Uuden jäsenen lisäys" />
               </tooltip>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleTallenna" text="Tallenna">
               <tooltip>
                  <Tooltip text="Tallenna muutokset" />
               </tooltip>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Tiedosto">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAvaa" text="Avaa" />
                  <MenuItem mnemonicParsing="false" onAction="#handleLopeta" text="Lopeta" />
                  <MenuItem mnemonicParsing="false" onAction="#handleTallenna" text="Tallenna">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Muokkaa">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleLisaaJasen" text="Lisää jäsen" />
                  <MenuItem mnemonicParsing="false" onAction="#handleMuokkaa" text="Muokkaa jäsenen tietoja" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleApua" text="Tietoa" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <right>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Jäsenet" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListChooser prefHeight="200.0" rivit="&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </right>
   <center>
      <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nimi" />
                  <TextField editable="false" text="Sukunimi Etunimi" GridPane.columnIndex="1" />
                  <Label text="Puh.Nro." GridPane.rowIndex="1" />
                  <TextField editable="false" text="0123456789" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Sähköposti" GridPane.rowIndex="2" />
                  <TextField editable="false" text="esim@esimmail.net" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Osoite" GridPane.rowIndex="3" />
                  <TextField editable="false" text="Esimerkkikatu 5, 69420 Esimkaupunki" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Käyttö/vk" GridPane.rowIndex="4" />
                  <Label text="Käyttö yht." GridPane.rowIndex="5" />
                  <Label text="Jäsen. voim." GridPane.rowIndex="6" />
                  <TextField editable="false" text="12" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField editable="false" text="245" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField editable="false" text="010318-010720" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
   </center>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <ChoiceBox onMouseClicked="#handleHakukriteeri" prefWidth="150.0" />
            <TextField onKeyReleased="#handleHaku" promptText="Hakutermi" />
            <Label alignment="CENTER" prefWidth="100.0" text="Hakutulokset:">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </Label>
            <ListChooser prefHeight="200" rivit="&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi&#10;Sukunimi Etunimi" />
         </children>
      </VBox>
   </left>
</BorderPane>
